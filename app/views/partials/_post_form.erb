<%= form_with class: "row g-3", model: @post, method: :post do |form| %>
  <div>
    <%= form.label :post_name, "Post Title", class: "form-label" %>
    <%= form.text_field :post_name, class: "form-control", required: true, autocomplete: "off", placeholder: "Title" %>
    <% @post.errors.full_messages_for(:post_name).each do |msg| %>
      <p class="text-danger pt-2">
        <%= msg %>
      </p>
    <% end %>
  </div>

  <div>
    <%= form.label :post_body, "Post Description", class: "form-label" %>
    <%= form.text_area :post_body, class: "form-control", required: true, placeholder: "Enter text", style: "height: 120px; resize: none;" %>
    <% @post.errors.full_messages_for(:post_body).each do |msg| %>
      <p class="text-danger pt-2" ><%= msg %></p>
    <% end %>
  </div>

  <div>
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>

<% end %>